<%= form_with model: @user, local: true do |form| %>

    <div class="alert alert-danger">
      <% @user.errors.full_messages.each do |error| %>
          <div><%= error %></div>
      <% end %>
    </div>

    <div class="mb-3">
      <%= form.label :email %><br/>
      <%= form.text_field :email, class: "form-control", placeholder: "example@email.com" %>
    </div>

    <div class="mb-3">
      <%= form.label :password %><br/>
      <%= form.password_field :password, class: "form-control", placeholder: "password" %>
    </div>

    <div class="mb-3">
      <%= form.label :password_confirmation %><br/>
      <%= form.password_field :password_confirmation, class: "form-control", placeholder: "password" %>
    </div>

    <div class="mb-3">
      <%= form.submit class: "btn btn-primary"%>
    </div>

<% end %>
