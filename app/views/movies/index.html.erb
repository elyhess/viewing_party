<div class="border-bottom">
  <% if params[:top_movies] %>
    <h1>Movies - Top 40</h1>
  <% elsif params[:trending_movies] %>
    <h1>Movies - Trending</h1>
  <% elsif params[:upcoming_movies] %>
    <h1>Movies - Upcoming</h1>
  <% else %>
    <h1>Movies - <%= params[:movie_name] %> </h1>
  <% end %>
</div>

<div class="jumbotron pt-4">
  <div class="mb-3">
    <%= render partial: "shared/search" %>
  </div>

  <div class="pt-5">
    <h2>Total Results: <%= @movies.count %></h2>
  </div>

  <div class="row row-cols-1 row-cols-md-3 mb-5">
    <% @movies.each do |movie| %>
      <div class="mb-4 col-md-4">
        <div class="card h-100 border-primary">
          <% unless movie.poster.nil? %>
            <%= image_tag movie.render_image, class: 'card-img-top', width: "412" %>
          <% end %>
          <div class="card-body">
            <h3 class="card-title"><%= movie.title %></h3>
            <p class="card-text"> Vote Average: <%= movie.vote_average %> </p>
            <p class="card-text"><%= movie.overview %></p>
          </div>
          <div class="card-footer d-grid gap-2">
            <%= link_to "View", movie_path(movie.id), class: 'btn btn-outline-primary stretched-link' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>