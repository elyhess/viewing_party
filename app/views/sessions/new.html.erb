<h1>Sign In</h1>

<%= form_with url: login_path, local: true do |form| %>

  <div class="mb-3">
    <%= form.label :email %><br/>
    <%= form.text_field :email, class: "form-control", placeholder: "example@email.com" %>
  </div>

  <div class="mb-3">
    <%= form.label :password %><br/>
    <%= form.password_field :password, class: "form-control", placeholder: "password" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Log In", class: "btn btn-primary"%>
  </div>

<% end %>

<%= link_to "Create an account", new_user_path %>